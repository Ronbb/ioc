{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Go",
            "type": "shell",
            "command": "goreturns.exe -w ${workspaceFolder}/",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Switch to amd64",
            "type": "shell",
            "command": "go env -w GOARCH=amd64",
            "problemMatcher": []
        },
        {
            "label": "Switch to i386",
            "type": "shell",
            "command": "go env -w GOARCH=386 ",
            "problemMatcher": []
        }
    ]
}
